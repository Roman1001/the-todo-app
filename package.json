  "build": {
		"appId": "nl.romeinvanburen.theTodoApp",
		"productName": "The Todo App",
		"mac": {
			"category": "public.app-category.productivity"
		},
		"dmg": {
			"icon": false
		},
		"linux": {
			"target": ["AppImage"],
			"category": "Office"
		}
	}
